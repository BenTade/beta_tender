{#
/**
 * @file
 * Template for the main dashboard showing dates and sources.
 *
 * Available variables:
 * - dates: Array of date objects with sources.
 */
#}
<div class="tender-dashboard">
  <h2>{{ 'Image Processing Dashboard'|t }}</h2>
  
  {% if dates is empty %}
    <p>{{ 'No scanned images have been uploaded yet.'|t }}</p>
  {% else %}
    <div class="dashboard-dates">
      {% for date_data in dates %}
        <details class="dashboard-date-group" open>
          <summary>
            <strong>{{ date_data.formatted_date }}</strong>
            <span class="date-code">({{ date_data.date }})</span>
          </summary>
          
          <div class="sources-list">
            {% for source in date_data.sources %}
              <div class="source-item">
                <a href="{{ source.url }}" class="source-link">
                  <span class="source-name">{{ source.name }}</span>
                  <span class="source-counts">
                    ({{ source.unprocessed }} {{ 'unprocessed images'|t }} / 
                     {{ source.created }} {{ 'created tenders'|t }})
                  </span>
                </a>
              </div>
            {% endfor %}
          </div>
        </details>
      {% endfor %}
    </div>
  {% endif %}
</div>
