    'tender_image_arrangement' => [
      'variables' => [
        'date' => NULL,
        'source' => NULL,
        'created_tenders' => [],
        'unprocessed_images' => [],
        'form' => NULL,
      ],
    ],
    'tender_proofread_dashboard' => [
      'variables' => [
        'filters' => [],
        'tenders' => [],
      ],
    ],
  ];
}

